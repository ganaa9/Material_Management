{
    "sap.app": {
      "id": "material_management",
      "type": "application",
      "i18n": "i18n/i18n.properties",
      "applicationVersion": {
        "version": "1.0.0"
      },
      "title": "Material Management App",
      "description": "A SAP Fiori UI5 application for managing materials.",
      "dataSources": {
        "mainService": {
          "uri": "/sap/opu/odata/sap/ZMARA_SRV/",  // Modifiez selon votre service OData
          "type": "OData",
          "settings": {
            "odataVersion": "2.0",
            "localUri": "localService/metadata.xml"  // Définit un fichier local pour les métadonnées lors du développement
          }
        }
      }
    },
    "sap.ui": {
      "technology": "UI5",
      "deviceTypes": {
        "desktop": true,
        "tablet": true,
        "phone": true
      }
    },
    "sap.ui5": {
      "rootView": {
        "viewName": "material_management.view.App",
        "type": "XML",
        "async": true
      },
      "dependencies": {
        "minUI5Version": "1.60.0",
        "libs": {
          "sap.m": {},
          "sap.ui.core": {},
          "sap.f": {}
        }
      },
      "models": {
        "": {
          "dataSource": "mainService",
          "preload": true
        }
      },
      "resources": {
        "css": [
          {
            "uri": "css/style.css"
          }
        ]
      },
      "routing": {
        "config": {
          "routerClass": "sap.m.routing.Router",
          "viewType": "XML",
          "viewPath": "material_management.view",
          "controlId": "app",
          "controlAggregation": "pages",
          "bypassed": {
            "target": "notFound"
          }
        },
        "routes": [
          {
            "pattern": "",
            "name": "main",
            "target": "main"
          }
        ],
        "targets": {
          "main": {
            "viewName": "Main",
            "viewLevel": 1
          },
          "notFound": {
            "viewName": "NotFound"
          }
        }
      }
    }
  }
  